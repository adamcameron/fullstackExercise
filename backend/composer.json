{
    "name": "adamcameron/full-stack-exercise",
    "description": "Full Stack Exercise",
    "license": "GPL-3.0-or-later",
    "type": "project",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^8",
        "ext-ctype": "*",
        "ext-iconv": "*",
        "ext-pdo": "*",
        "composer/package-versions-deprecated": "1.11.99.1",
        "doctrine/doctrine-bundle": "^2.2",
        "doctrine/doctrine-migrations-bundle": "^3.0",
        "doctrine/orm": "^2.8",
        "symfony/console": "5.2.*",
        "symfony/dotenv": "5.2.*",
        "symfony/flex": "^1.3.1",
        "symfony/framework-bundle": "5.2.*",
        "symfony/proxy-manager-bridge": "5.2.*",
        "symfony/yaml": "5.2.*"
    },
    "require-dev": {
        "ext-dom": "*",
        "ext-json": "*",
        "ext-libxml": "*",
        "guzzlehttp/guzzle": "^7",
        "kahlan/kahlan": "^5.0.8",
        "pdepend/pdepend": "^2.9",
        "phpmd/phpmd": "^2.9",
        "phpunit/phpunit": "^9.5",
        "squizlabs/php_codesniffer": "^3.5",
        "symfony/browser-kit": "5.2.*",
        "symfony/http-foundation": "^5.2"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "adamCameron\\fullStackExercise\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
			"adamCameron\\fullStackExercise\\tests\\": "tests/"
        }
    },
    "replace": {
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php72": "*"
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        },
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ],
        "test": "vendor/bin/phpunit --testdox",
        "spec": "vendor/bin/kahlan",
        "coverage": [
            "vendor/bin/kahlan --lcov=\"var/tmp/lcov/coverage.info\"",
            "genhtml --output-directory public/lcov/ var/tmp/lcov/coverage.info"
        ],
        "decache": [
            "composer clearcache",
            "rm -rf var/cache/dev",
            "rm -rf var/cache/test",
            "bin/console cache:clear --env=dev",
            "bin/console cache:clear --env=test",
            "rm -rf /tmp/kahlan"
        ],
        "phpmd": "vendor/bin/phpmd src,tests text phpmd.xml",
        "phpcs": "vendor/bin/phpcs --standard=phpcs.xml.dist",
        "phpcbf": "vendor/bin/phpcbf"
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "allow-contrib": true,
            "require": "5.2.*"
        }
    }
}
